{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
        "@model/*": [ "src/model/*" ],
        "@controller/*": [ "src/controller/*" ],
        "@mongoose/*": ["src/mongoose/*"]
    }
  },
  "include": ["./src/**/*"]
}
